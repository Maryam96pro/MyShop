<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_last"
    android:layout_margin="5dp"
    android:layout_width="120dp"
    android:layout_height="180dp">

    <ImageView
        android:id="@+id/img_amazing_different_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_circle_left_24" />

    <TextView
        android:id="@+id/txt_amazing_different_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="مشاهده همه"
        app:layout_constraintEnd_toEndOf="@+id/img_amazing_different_pic"
        app:layout_constraintStart_toStartOf="@+id/img_amazing_different_pic"
        app:layout_constraintTop_toBottomOf="@+id/img_amazing_different_pic" />
</androidx.constraintlayout.widget.ConstraintLayout>